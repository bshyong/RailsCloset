<h1>Listing shirts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Last worn</th>
      <th>Date acquired</th>
      <th>Price</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @shirts.each do |shirt| %>
      <tr>
        <td><%= shirt.name %></td>
        <td><%= shirt.last_worn %></td>
        <td><%= shirt.date_acquired %></td>
        <td><%= shirt.price %></td>
        <td><%= link_to 'Show', shirt %></td>
        <td><%= link_to 'Edit', edit_shirt_path(shirt) %></td>
        <td><%= link_to 'Destroy', shirt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

