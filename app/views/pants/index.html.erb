<h1>Listing pants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Last worn</th>
      <th>Date acquired</th>
      <th>Price</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pants.each do |pant| %>
      <tr>
        <td><%= pant.name %></td>
        <td><%= pant.last_worn %></td>
        <td><%= pant.date_acquired %></td>
        <td><%= pant.price %></td>
        <td><%= link_to 'Show', pant %></td>
        <td><%= link_to 'Edit', edit_pant_path(pant) %></td>
        <td><%= link_to 'Destroy', pant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

